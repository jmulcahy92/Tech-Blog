<div>
    <h2>
        {{post.title}}
    </h2>
    <p>
        POSTED BY: {{post.User.username}} on {{format_date post.createdAt}}
    </p>
    <p>
        {{post.body}}
    </p>
</div>

<div>
    <h3>Comments</h3>
    <ul>
        {{#each post.Comment as |comment|}}
        <li>{{post.Comment.body}}</li>
        {{/each}}
    </ul>
</div>